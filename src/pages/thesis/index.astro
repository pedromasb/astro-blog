---
import ThesisLayout from "../../layouts/ThesisLayout.astro";
import ThesisAsk from "../../components/ThesisAsk.tsx";
---

<ThesisLayout
  title="Doctoral Thesis"
  description="PhD thesis — details, abstract, and an interactive Q&A tool."
>
  <!-- Meta -->
  <Fragment slot="meta">
    <h2 class="text-lg sm:text-xl font-semibold mb-3">Thesis Details</h2>

    <div class="space-y-3 text-sm sm:text-base">
      <div>
        <div class="text-skin uppercase tracking-wide text-xs mb-1">Title</div>
        <div class="text-base sm:text-lg font-medium">
          Virtual Observatory and machine learning for the study of low-mass objects in photometric and spectroscopic surveys
        </div>
      </div>

      <div>
        <div class="text-skin uppercase tracking-wide text-xs mb-1">Supervisors</div>
        <ul class="list-disc pl-5 space-y-1">
          <li>Dr. Enrique Solano Márquez</li>
          <li>Dra. Ana González Marcos</li>
        </ul>
      </div>

      <div class="grid gap-2 sm:grid-cols-2">
        <div>
          <div class="text-skin uppercase tracking-wide text-xs mb-1">Institution</div>
          <div>Centro de Astrobiología (CAB), INTA-CSIC</div>
        </div>
        <div>
          <div class="text-skin uppercase tracking-wide text-xs mb-1">University</div>
          <div>Universidad Complutense de Madrid</div>
        </div>
      </div>
    </div>
  </Fragment>

  <!-- Abstract -->
  <Fragment slot="abstract">
    <p>
      <!-- Paste your full abstract here; it will scroll inside the card if long. -->
    </p>
  </Fragment>

  <!-- Chat -->
  <Fragment slot="chat">
    <ThesisAsk client:load />
  </Fragment>
</ThesisLayout>
