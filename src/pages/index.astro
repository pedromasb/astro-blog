---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SITE, SOCIALS } from "@config";
import ResearchGlanceStrip from "@components/ResearchGlanceStrip.astro";

const posts = await getCollection("blog");
const software = await getCollection("software");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);

// Get featured software items
const sortedSoftware = software
  .filter(({ data }) => !data.draft)
  .sort((a, b) => {
    const dateA = new Date(a.data.pubDatetime);
    const dateB = new Date(b.data.pubDatetime);
    return dateB.getTime() - dateA.getTime();
  });
const featuredSoftware = sortedSoftware.filter(({ data }) => data.featured);

// Combine featured posts and software for the featured section
const allFeaturedItems = [
  ...featuredPosts.map(item => ({ ...item, type: 'post' })),
  ...featuredSoftware.map(item => ({ ...item, type: 'software' }))
].sort((a, b) => {
  const dateA = new Date(a.data.pubDatetime);
  const dateB = new Date(b.data.pubDatetime);
  return dateB.getTime() - dateA.getTime();
});

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero">
      <h1>My Research</h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="rss-link"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="rss-icon"
          ><path
            d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
          ></path><path
            d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
          ></path><circle cx="6" cy="18" r="2"></circle>
        </svg>
        <span class="sr-only">RSS Feed</span>
      </a>

      <p>
        Finding, exploring, and developing new ways to exploit astronomical data with deep learning techniques is the cornerstone of my research.
        I enjoy going the extra mile to present my results to the astronomical community and enable user-driven data discovery.       
      </p>
      <p>
        I am a postdoctoral researcher in the Astrophysics department @CAB, currently working on a project for ESA focused on exploiting the recent Euclid mission.
      </p>
      <p>
        In this repository, you can delve deeper into my research, catalogues, and software developments. You can also <a href="/thesis" class="inline-link font-bold text-skin-accent">interact with my doctoral thesis</a> through an AI-powered chat system that answers questions about my research directly from the thesis content.
      </p>
      {
        // only display if at least one social link is enabled
        socialCount > 0 && (
          <div class="social-wrapper">
            <div class="social-links">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <ResearchGlanceStrip />

    <Hr />

    {
      allFeaturedItems.length > 0 && (
        <>
          <section id="featured">
            <h2>Featured</h2>
            <ul>
              {allFeaturedItems.map((item) => (
                <Card
                  href={item.type === 'post' ? `/posts/${item.slug}/` : `/software/${item.slug}/`}
                  frontmatter={item.data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8;
  }
  #hero h1 {
    @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-12;
  }
  #featured h2,
  #recent-posts h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>