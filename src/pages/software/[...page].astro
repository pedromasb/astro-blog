---
import { SITE } from "@config";
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import SoftwareLayout from "@layouts/Software.astro";
import getSortedSoftware from "@utils/getSortedSoftware";

export const getStaticPaths = (async ({ paginate }) => {
  const allSoftware = await getCollection("software");
  const sortedSoftware = getSortedSoftware(allSoftware);
  return paginate(sortedSoftware, { pageSize: SITE.postPerPage });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<SoftwareLayout {page} />