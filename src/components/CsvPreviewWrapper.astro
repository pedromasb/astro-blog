---
import CsvPreview from "./CsvPreview";

export interface Props {
  csvPath: string;
  maxRows?: number;
  height?: string;
  title?: string;
}

const { csvPath, maxRows = 15, height = "500px", title = "Dataset Preview" } = Astro.props;
---

<CsvPreview 
  csvPath={csvPath}
  maxRows={maxRows}
  height={height}
  title={title}
  client:load
/>