---
import SkillsGalaxy from "./SkillsGalaxy";
---

<section class="skills-galaxy-section">
  <div class="section-header">
    <h2 class="section-title">Skills Galaxy</h2>
    <p class="section-subtitle">Explore my technical expertise in an interactive 3D universe</p>
    <p class="section-instruction">Drag to rotate • Click on stars to learn more • Brighter stars indicate higher proficiency</p>
  </div>
  <div class="galaxy-wrapper">
    <SkillsGalaxy client:load />
  </div>
</section>

<style>
  .skills-galaxy-section {
    @apply mb-16;
  }
  
  .section-header {
    @apply text-center mb-8;
  }
  
  .section-title {
    @apply text-3xl font-bold text-skin-accent mb-4;
  }
  
  .section-subtitle {
    @apply text-skin-base/80 max-w-2xl mx-auto mb-2;
  }
  
  .section-instruction {
    @apply text-sm text-skin-base/60 font-mono;
  }
  
  .galaxy-wrapper {
    @apply rounded-2xl overflow-hidden shadow-2xl;
  }
</style>