---
// Slim 3-card strip used under the home hero.
import { Icon } from "astro-icon"; 
---

<section aria-label="Research at a glance" class="mt-6">
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
    <a href="/publications" class="group rounded-xl border border-skin-line/50 p-4 hover:bg-gray-100/50 dark:hover:bg-gray-800/40 transition">
      <div class="flex items-center gap-3">
        <div class="rounded-lg border border-skin-line/50 p-2">
          <Icon name="lucide:book-open" class="h-5 w-5" aria-hidden="true" />
        </div>
        <div>
          <div class="text-sm text-skin-muted">Publications</div>
          <div class="font-medium">Peer-reviewed & preprints</div>
        </div>
      </div>
    </a>

    <a href="/software" class="group rounded-xl border border-skin-line/50 p-4 hover:bg-gray-100/50 dark:hover:bg-gray-800/40 transition">
      <div class="flex items-center gap-3">
        <div class="rounded-lg border border-skin-line/50 p-2">
          <Icon name="lucide:cpu" class="h-5 w-5" aria-hidden="true" />
        </div>
        <div>
          <div class="text-sm text-skin-muted">Datasets / Software</div>
          <div class="font-medium">Code, data, tools</div>
        </div>
      </div>
    </a>

    <a href="/talks" class="group rounded-xl border border-skin-line/50 p-4 hover:bg-gray-100/50 dark:hover:bg-gray-800/40 transition">
      <div class="flex items-center gap-3">
        <div class="rounded-lg border border-skin-line/50 p-2">
          <Icon name="lucide:mic" class="h-5 w-5" aria-hidden="true" />
        </div>
        <div>
          <div class="text-sm text-skin-muted">Talks</div>
          <div class="font-medium">Slides & recordings</div>
        </div>
      </div>
    </a>
  </div>
</section>
